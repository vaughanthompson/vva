.gradient25
    background-blend-mode: normal
    background: linear-gradient(135deg, 
    brand1,
    brand0 25%,
    brand2 75%) 
.gradient50
    background-blend-mode: normal
    background: linear-gradient(135deg, 
    brand1,
    brand0 50%,
    brand2)
.gradient75
    background-blend-mode: normal
    background: linear-gradient(135deg, 
    brand1 25%,
    brand0 55%,
    brand2 95%)
.gradientFade1
    background-blend-mode: normal
    background: linear-gradient(135deg, 
    blackAlp90 10%,
    blackAlp75 30%,
    blackAlp50 60%,
    blackAlp5 90%)    
.gradientShdw
    background-image: linear-gradient(to bottom, blackAlp5, transparent 10vh)
@media mtrigger
    .gradient3
        background-blend-mode: normal
        background: linear-gradient(to right bottom, white, whiteAlp90, whiteAlp90, whiteAlp10)
.blur
    filter:blur(10px)



// last in the cascade - highest prio
.m
    @media screen and (min-width: tBreakPoint)
        display: $hideItAll
.d
    @media screen and (max-width: tBreakPoint)
        display: $hideItAll

