// libs and default 3rd party
@import 'nib'
// setup
@import '../fonts/avenir/stylesheet.css'
// setup
@require 'defaults.styl'
// block, nav etc
@require 'layout.styl'
// custom elements, icons
@require 'elements.styl'
// typography, links
@require 'typo.styl'






/* effects */
.multiply
    background-blend-mode: multiply
    /*background-color: blackAlp25*/
.bgoverlay0
    background-color: blackAlp10 !important
.bgoverlay1
    background-color: blackAlp25 !important
.bgoverlay2
    background-color: blackAlp50 !important
.bgoverlay3
    background-color: blackAlp75 !important

.multiplyBlack
    background-color: brand1
.multiplyRed
    background-color: brand2
.multiplyGreen
    background-color: brand3

.lighten1
    background-color: rgba(255,255,255,0.8)
    background-blend-mode: overlay
    //filter:grayscale(80%)
.lighten2
    background-color: rgba(255,255,255,0.50)
    background-blend-mode: overlay
    //filter:grayscale(80%)
.greyscale
    background-color: rgba(0,0,0,0.30)
    filter:grayscale(100%)
    transition: 1s
.greyscaleLt
    filter:grayscale(0%)
    transition: 2.5s
.bgoffer
    background-color: rgba(222,30,33,1.0) //# offer

.burnColor
    background-blend-mode: color-burn
    opacity: 1.0

