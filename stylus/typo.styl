/* simple link with icon */
a.hasIcon
    line-height: 1em
    font-size: 100%
    font-weight: 500
    color: brand0
    text-decoration: none !important
    padding-left: 0
    margin-left: 18px
    display inline-block
    position: relative
    transition: 0.3s
    margin-bottom: 1em
a.hasIcon:hover
    color: brand2 
    //transform: translateX(-18px)   
a.hasIcon::before
    font-family: 'icomoon' !important
    position: absolute
    margin-left: -21px
    margin-top: -2px
a.hasIcon.back::before
    content: '\e905'
a.hasIcon.cancel::before
    content: '\e90a'






