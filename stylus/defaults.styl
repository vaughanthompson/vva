// vars
brand0 = rgba(0,102,148,1.0) //# viva mid blue
brand1 = rgba(9,39,69,1.0) //# viva dark blue
brand2 = rgba(1,185,229,1.0) //# viva light blue
brand3 = rgba(100,100,100,1.0) //# taupe
brand4 = rgba(180,180,180,1.0) //#
brand5 = rgba(255,255,255,1.0) //# 
offer = rgba(222,30,33,1.0) //# offer

good = rgba(0,220,110,1.0)
alert = red

white = rgba(255,255,255,1.0)
whiteAlp90 = rgba(255,255,255,0.9)
whiteAlp75 = rgba(255,255,255,0.75)
whiteAlp50 = rgba(255,255,255,0.5)
whiteAlp25 = rgba(255,255,255,0.25)
whiteAlp10 = rgba(255,255,255,0.1)
